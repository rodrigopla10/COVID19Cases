@model COVID19Cases.ViewModel.TopRegionViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>TOP 10 COVID CASES</h1>

<form asp-controller="Report" asp-action="ReportByRegion" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <div class="col-md-5">
            <select class="form-control" asp-for="iso"
                    asp-items="@(new SelectList(Model.regions, "iso", "name"))">
                <option>Select a region</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Report" />
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Region
            </th>
            <th>
                Cases
            </th>
            <th>
                Deaths
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.topRegions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Region)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cases)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deaths)
                </td>
            </tr>
        }
    </tbody>
</table>
